<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/iv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_area"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="5dp"
        android:src="@drawable/dwtb" />

    <ImageView
        android:id="@+id/iv_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/iv_tag"
        android:layout_alignParentRight="true"
        android:layout_marginRight="28dp"
        android:src="@drawable/dzlq" />

    <TextView
        android:id="@+id/tv_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="22dp"
        android:layout_marginTop="18dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_toRightOf="@+id/iv_tag"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="东瑞酒家"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_tag"
        android:layout_marginLeft="22dp"
        android:layout_toLeftOf="@+id/iv_right"
        android:layout_toRightOf="@+id/iv_tag"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="广州市天河区体育东路136号"
        android:textSize="17sp" />

    <!--<View-->
    <!--android:id="@+id/line_middle"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="1px"-->
    <!--android:layout_centerVertical="true"></View>-->

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/iv_tag"
        android:layout_below="@+id/tv_address"
        android:layout_marginTop="18dp"
        android:background="@color/line_color_gray_d1"></View>
</RelativeLayout>