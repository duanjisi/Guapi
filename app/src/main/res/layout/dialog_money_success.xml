<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="22dp"
    android:layout_marginRight="22dp"
    android:background="@drawable/bg_white_circle_4"
    android:gravity="center"
    android:orientation="vertical">

    <com.guapi.widget.scan.CircleImageView
        android:id="@+id/iv_point"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="32dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/person" />

    <TextView
        android:id="@+id/tv_tips1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="红包藏好了"
        android:textColor="@color/B_black"
        android:textSize="@dimen/sp15" />

    <TextView
        android:id="@+id/tv_tips2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp10"
        android:text="到红包所在位置，接线索扫描找红包"
        android:textColor="@color/gray_888"
        android:textSize="@dimen/sp12" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginLeft="@dimen/dp20"
            android:layout_marginRight="@dimen/dp20"
            android:layout_weight="1"
            android:background="@drawable/bg_white__green_circle"
            android:gravity="center"
            android:text="先这样吧"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/sp14" />

        <Button
            android:id="@+id/btn_submit"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginBottom="@dimen/dp5"
            android:layout_marginRight="@dimen/dp20"
            android:layout_weight="1"
            android:background="@drawable/bg_red_circle"
            android:gravity="center"
            android:text="叫人来找"
            android:textColor="@color/white"
            android:textSize="@dimen/sp14" />
    </LinearLayout>
</LinearLayout>