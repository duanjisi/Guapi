<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="40dp"
            android:layout_height="40dp"
            tools:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_toRightOf="@+id/iv_user"
            android:textColor="@color/B_black"
            tools:text="XXXX" />

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/bg_green_circle"
            android:layout_toRightOf="@+id/tv_name"
            android:drawablePadding="@dimen/dp_4"
            android:paddingLeft="@dimen/dp_4"
            android:paddingRight="@dimen/dp_4"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            tools:drawableLeft="@mipmap/ic_sex_boy"
            tools:text="12" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:textColor="@color/gray_888"
            tools:text="30分钟前" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tv_name"
            android:layout_below="@+id/tv_name"
            android:layout_marginTop="@dimen/dp10"
            android:textColor="@color/gray_888"
            tools:text="大师的股价来看水电费" />

        <ImageView
            android:id="@+id/iv_hb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message"
            android:layout_marginTop="@dimen/dp20"
            android:layout_alignLeft="@+id/tv_name"
            android:src="@mipmap/ic_hb_x" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_hb"
            android:layout_marginTop="@dimen/dp10"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_see"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_sb_selected"
                android:drawablePadding="@dimen/dp_4"
                android:textColor="@color/gray_888"
                android:textSize="@dimen/sp_12"
                android:text="0" />

            <TextView
                android:id="@+id/tv_zan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp10"
                android:layout_marginRight="@dimen/dp10"
                android:drawableLeft="@mipmap/ic_zan"
                android:drawablePadding="@dimen/dp_4"
                android:textColor="@color/gray_888"
                android:textSize="@dimen/sp_12"
                android:text="0" />

            <TextView
                android:id="@+id/tv_liuyan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/ic_message"
                android:drawablePadding="@dimen/dp_4"
                android:textColor="@color/gray_888"
                android:textSize="@dimen/sp_12"
                android:text="0" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_comment_count"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:drawableLeft="@mipmap/ic_comment"
        android:drawablePadding="@dimen/dp10"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:text="@string/comment_count"
        android:textColor="#264c55"
        android:textSize="17sp" />
</LinearLayout>